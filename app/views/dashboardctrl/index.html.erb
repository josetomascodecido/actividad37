<div class="row">
  <div class="col-md-6">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Last name</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @workers.each do |worker| %>
          <tr>
            <td><%= worker.name %></td>
            <td><%= worker.last_name %></td>
            <td><%= worker.email %></td>
            <td><%= link_to 'Show', worker %></td>
            <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
            <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Worker', new_worker_path %>
  </div>
  <div class="col-md-6">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @proyects.each do |proyect| %>
          <tr>
            <td><%= proyect.name %></td>
            <td><%= proyect.content %></td>
            <td><%= link_to 'Show', proyect %></td>
            <td><%= link_to 'Edit', edit_proyect_path(proyect) %></td>
            <td><%= link_to 'Destroy', proyect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Proyect', new_proyect_path %>

  </div>

</div>
